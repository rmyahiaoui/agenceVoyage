{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('voyage_index') }}">Voyages</a></li>
            <li class="breadcrumb-item"><a href="{{ path('voyage_show', {'id' : ticket.voyage.id}) }}">Voyage</a></li>
            <li class="breadcrumb-item active" aria-current="page">trajet {{ ticket.departure }} -> {{ ticket.arrival }}</li>
        </ol>
    </nav>
    <table class="table">
        <tbody>
            <tr>
                <th>Departure</th>
                <td>{{ ticket.departure }}</td>
            </tr>
            <tr>
                <th>Arrival</th>
                <td>{{ ticket.arrival }}</td>
            </tr>
            <tr>
                <th>Seat</th>
                <td>{{ ticket.seat }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ ticket.type }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ ticket.number }}</td>
            </tr>
            <tr>
                <th>Gate</th>
                <td>{{ ticket.gate }}</td>
            </tr>
            <tr>
                <th>BaggageDrop</th>
                <td>{{ ticket.baggageDrop }}</td>
            </tr>
            <tr>
                <th>DepartureDate</th>
                <td>{{ ticket.departureDate ? ticket.departureDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ArrivalDate</th>
                <td>{{ ticket.arrivalDate ? ticket.arrivalDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-1">
                <a href="{{ path('ticket_edit', {'id': ticket.id}) }}" class="btn btn-info">Editer</a>
            </div>
            <div class="col-md-1">
                {{ include('ticket/_delete_form.html.twig') }}
            </div>
        </div>
    </div>




{% endblock %}
